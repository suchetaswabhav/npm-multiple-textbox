{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,  
    "target": "es2015",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types" 
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "my-new-lib": [
        "dist/my-new-lib"
      ],
      "my-new-lib/*": [
        "dist/my-new-lib/*"
      ],
      "my-new-lib1": [
        "dist/my-new-lib1"
      ],
      "my-new-lib1/*": [
        "dist/my-new-lib1/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}